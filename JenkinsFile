
pipeline {

    agent any
    
    stages {
		

		stage('Installing Packages'){

			
			steps{

				echo '************** Installing requirements ************************'
				catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') 
				{
                	sh "exit 1"
				}

		}

		stage('Static Code Checking') {
            steps {
                script {
                    sh 'find . -name \\*.py | xargs pylint -f parseable | tee pylint.log'
                }
            }
        }

 		stage('Test') {
		
			steps {
				
				echo '******************* Test Msg **********************************'
				sh 'pytest'
			}
		}       
    		
    }
}
