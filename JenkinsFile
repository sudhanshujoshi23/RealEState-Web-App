
pipeline {

    agent any
    
    stages {
		

		stage('Environment Setup'){


			steps{

				echo '************** Installing requirements ************************'
				sh 'pip install -r requirements.txt'
			}

		}
 		stage('Test') {
		
			steps {
				script{
					echo '******************* Running Tests **********************************'
					sh 'pytest'
				}
				
				
				
			}
		}       
    		
    }
}
