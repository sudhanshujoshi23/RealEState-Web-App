def stage1 = false
def stage3 = false

pipeline {
    agent any
    stages {
        stage('Stage-1') {
            steps {
                echo '-------- Stage 1 - ${stage1} ----------------'
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    script{
                        stage1 = false
                    }
                    sh "exit 1"
                }
            }
        }
        stage('Stage-2') {
            when {
                expression {
                    return env.stage1
                }
            }
            steps {
                echo '---------- Stage 2 ---------------'
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    script{
                        stage2 = false
                    }
                    sh "exit 1"
                }
            }
        }
        stage('Stage-3') {
            steps {
                echo '---------- Stage 3 ---------------'
                script{
                    stage3 = true
                }
                sh 'exit 0'
                
            }
        }
        stage('Stage-4') {
            when {
                expression {
                    return env.stage3
                }
            }
            steps {
                echo '---------- Stage 4 ---------------'
                sh 'exit 0'
            }
        }
    }
}
