
pipeline {

    agent any
    
    stages {
		

		stage('Environment Setup'){


			steps{

				echo '************** Installing requirements ************************'
				sh 'pip install -r requirements.txt'
			}

		}
 		stage('Test') {
		
			steps {

				echo '******************* Running Tests **********************************'
				sh 'python -m pytest'
				
				
				
				
			}
		}       
    		
    }
}
