def stage1 = false

pipeline {
    agent any
    stages {
        stage('Stage-1') {
            steps {
                echo '-------- Stage 1 - ${stage1} ----------------'
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    script{
                        stage1 = false
                    }
                    sh "exit 1"
                }
            }
        }
        stage('Stage-2') {
            when {
                expression {
                    ${stage1} == true
                }
            }
            steps {
                echo '---------- Stage 2 ---------------'
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh "exit 1"
                }
            }
        }
        stage('Stage-3') {
            steps {
                echo '---------- Stage 3 ---------------'
                sh 'exit 0'
            }
        }
        stage('Stage-4') {
            when {
                expression {
                    currentBuild.buildResult == 'SUCCESS'
                }
            }
            steps {
                echo '---------- Stage 4 ---------------'
                sh 'exit 0'
            }
        }
    }
}
