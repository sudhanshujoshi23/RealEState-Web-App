def stage1 = false
def stage2 = false
def stage3 = false

pipeline {
    agent any
    stages {
        stage('Stage-1') {
            steps {
                echo '-------- Stage 1 ----------------'
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh "exit 1"
                }
            }
        }
        stage('Stage-2') {
            when {
                expression {
                    return stage1
                }
            }
            steps {
                echo '---------- Stage 2 ---------------'
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh "exit 1"
                }
            }
        }
        stage('Stage-3') {
            steps {
                echo '---------- Stage 3 ---------------'
                script {
                    stage3 = true
                }
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    
                    sh "exit 0"
                }
            }
        }
        stage('Stage-4') {
            when {
                expression {
                    return stage3
                }
            }
            steps {
                echo '---------- Stage 4 ---------------'
                sh 'exit 0'
            }
        }
    }
}
